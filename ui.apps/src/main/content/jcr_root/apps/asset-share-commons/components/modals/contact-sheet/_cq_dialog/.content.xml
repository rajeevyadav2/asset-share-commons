<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Contact Sheet Modal"
          sling:resourceType="cq/gui/components/authoring/dialog"
          maximized="{Boolean}true">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/tabs"
                    maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <tab-1
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Form Labels"
                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                            margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <modal-title
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            emptyText="Share"
                                            fieldLabel="Modal Title"
                                            name="./modalTitle"
                                            required="{Boolean}true"/>
                                    <asset-list-title
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            emptyText="Assets"
                                            fieldLabel="Asset List Title"
                                            name="./assetListTitle"
                                            required="{Boolean}true"/>
                                    <contact-sheet-options-label
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            emptyText="Contact sheet options"
                                            fieldLabel="Contact Sheet Options Label"
                                            name="./contactSheetOptionsLabel"
                                            required="{Boolean}true"/>
                                    <number-of-columns-field-label
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            emptyText="Number of Columns"
                                            fieldLabel="Number of Columns Label"
                                            name="./numberOfColumnsLabel"
                                            required="{Boolean}true"/>
                                    <cancel-button
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            emptyText="Cancel"
                                            fieldLabel="Cancel Button Label"
                                            name="./cancelButton"
                                            required="{Boolean}true"/>
                                    <view-button
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            emptyText="View"
                                            fieldLabel="View Button Label"
                                            name="./viewButton"
                                            required="{Boolean}true"/>
                                </items>
                            </column>
                        </items>
                    </tab-1>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
